<UserControl x:Class="Defuser_Imitation.Components.UserControls.RoundResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <SolidColorBrush x:Key="FirstOrbitColor" Color="#FF191919"/>
        <SolidColorBrush x:Key="SecondOrbitColor" Color="#FF191919"/>
    </UserControl.Resources>
    <UserControl.Background>
        <SolidColorBrush Color="#FF121212" Opacity="0.6"/>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"/>
            <ColumnDefinition Width="920"/>
        </Grid.ColumnDefinitions>
        <Viewbox>
            <StackPanel HorizontalAlignment="Left" Margin="20 0 0 0" VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Name="TbWinnerTeam" FontFamily="{StaticResource RobotoFont}" Text="ИСХОД РАУНДА" Foreground="White" FontWeight="Bold" FontStyle="Italic" FontSize="56"/>
                <TextBlock Name="TbRoundResultDescription" FontFamily="{StaticResource RobotoFont}" Text="Описание исхода раунда" Foreground="White" FontStyle="Italic" FontSize="18" TextWrapping="Wrap"/>
                <Viewbox Width="300" HorizontalAlignment="Left" Margin="0 40 0 0">
                    <StackPanel Orientation="Horizontal">
                        <Button Name="PlayAgainBtn" Style="{StaticResource MessageButton}" Height="52" Width="200" Content="Начать заново" FontSize="28" Click="PlayAgainBtn_Click"/>
                        <Button Name="MenuBtn" Style="{StaticResource MessageButton}" Height="52" Width="200" Margin="20 0 0 0" Content="Выход в меню" FontSize="28" Click="MenuBtn_Click"/>
                    </StackPanel>
                </Viewbox>
            </StackPanel>
        </Viewbox>
        <Viewbox HorizontalAlignment="Right" Grid.Column="1" Width="1150" Height="1150" Margin="0 0 -575 0">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Border Height="300" Width="300" Margin="0 0 0 0" Background="#FF191919" CornerRadius="360">
                    <Viewbox Height="180" Width="180">
                        <Grid>
                            <Path Name="AttackerGlyph" Style="{StaticResource AttackIcon}" Panel.ZIndex="1" Visibility="Collapsed" Fill="{StaticResource ElementThemeColor}"/>
                            <Path Name="DefenderGlyph" Style="{StaticResource DefenseIcon}" Panel.ZIndex="1" Visibility="Collapsed" Fill="{StaticResource ElementThemeColor}"/>
                        </Grid>
                    </Viewbox>
                </Border>
                <Grid>
                    <Grid Name="GridFirstOrbit" RenderTransformOrigin="0.5,0.5">
                        <Border Width="400" Height="400" BorderBrush="{StaticResource FirstOrbitColor}" BorderThickness="3" CornerRadius="360" Margin="0 0 0 0"/>
                        <Border Name="AttackerSphere" Width="60" Height="60" BorderBrush="{StaticResource FirstOrbitColor}" BorderThickness="4" CornerRadius="360" Background="#FF363636" Margin="0 0 394 0" RenderTransformOrigin="0.5,0.5">
                            <Viewbox Height="35" Width="35" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 2">
                                <Path Name="AttackerPath" Fill="{StaticResource FirstOrbitColor}" Style="{StaticResource AttackIcon}"/>
                            </Viewbox>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                        </Border>
                        <Border Width="20" Height="20" BorderBrush="{StaticResource FirstOrbitColor}" BorderThickness="4" CornerRadius="360" Background="{StaticResource FirstOrbitColor}" Margin="0 0 0 396"/>
                        <Border Width="30" Height="30" BorderBrush="{StaticResource FirstOrbitColor}" BorderThickness="4" CornerRadius="360" Background="{StaticResource FirstOrbitColor}" Margin="200 340 0 0"/>
                        <Grid.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Grid.RenderTransform>
                    </Grid>
                    <Grid Name="GridSecondOrbit" RenderTransformOrigin="0.5,0.5">
                        <Border Width="550" Height="550" BorderBrush="{StaticResource SecondOrbitColor}" BorderThickness="3" CornerRadius="360" Margin="0 0 0 0"/>
                        <Border Name="DefenderSphere" Width="60" Height="60" BorderBrush="{StaticResource SecondOrbitColor}" BorderThickness="4" CornerRadius="360" Background="#FF363636" Margin="0 0 540 0" RenderTransformOrigin="0.5,0.5">
                            <Viewbox Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path Name="DefenderPath" Style="{StaticResource DefenseIcon}" Fill="{StaticResource SecondOrbitColor}"/>
                            </Viewbox>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                        </Border>
                        <Border Width="20" Height="20" BorderBrush="{StaticResource SecondOrbitColor}" BorderThickness="4" CornerRadius="360" Background="{StaticResource SecondOrbitColor}" Margin="0 0 0 546"/>
                        <Border Width="30" Height="30" BorderBrush="{StaticResource SecondOrbitColor}" BorderThickness="4" CornerRadius="360" Background="{StaticResource SecondOrbitColor}" Margin="200 506 0 0"/>
                        <Grid.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Grid.RenderTransform>
                    </Grid>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
