<UserControl x:Class="Defuser_Imitation.Components.UserControls.GuideControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Focusable="True" Loaded="UserControl_Loaded" KeyDown="UserControl_KeyDown">
    <UserControl.Background>
        <SolidColorBrush Color="#FF121212" Opacity="0.6"/>
    </UserControl.Background>

    <Grid Name="MainGrid">
        <Image Source="/Resources/controls_background.jpg" Width="1920" Height="1010" Stretch="UniformToFill" Margin="0 35"/>
        <Viewbox VerticalAlignment="Top" Width="42" Height="85" Margin="0 100 0 0" HorizontalAlignment="Left" Focusable="False">
            <Button Name="BackBtn" Height="85" Width="42" Style="{StaticResource BackButton}" Focusable="False" Click="BackBtn_Click">
                <Path Data="M14.7778 0H19V3L7.38889 14.5L19 27V30H14.7778L0 14.5L14.7778 0Z" Fill="#121212"/>
            </Button>
        </Viewbox>
        <Viewbox Margin="0 100 0 35">
            <Grid Width="1450">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="РУКОВОДСТВО" FontWeight="Bold" FontFamily="{StaticResource RobotoFont}" Foreground="White" FontSize="40" Margin="24 0"/>
                    <Rectangle Height="5" Fill="WhiteSmoke" Stretch="UniformToFill" Margin="24 5" />
                    <ListBox Name="LbNotes" d:ItemsSource="{d:SampleData ItemCount=25}" ItemsSource="{Binding GuideChapters, NotifyOnTargetUpdated=True}" Background="{x:Null}" BorderThickness="0" FlowDirection="RightToLeft" Height="710">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Name="GuideChapterBtn" Style="{StaticResource MessageButton}" Width="450" Height="50" Margin="20 0 0 5" Content="{Binding Name}" FontSize="28" HorizontalContentAlignment="Right" Padding="0 0 20 0" Click="GuideChapterBtn_Click"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                <Grid Grid.Column="1" Margin="140 0 0 0">
                    <Rectangle Stretch="Fill" Fill="#FF121212" Width="810" Height="771" Opacity="0.5">
                        <Rectangle.OpacityMask>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Transparent"/>
                                <GradientStop Color="White" Offset="0.832"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <StackPanel Margin="80 0 0 0">
                        <TextBlock FontFamily="{StaticResource RobotoFont}" Text="{Binding SelectedGuideChapter.Name}" Foreground="White" FontSize="40" FontWeight="Bold" HorizontalAlignment="Left" Margin="0 0 0 20"/>
                        <ScrollViewer Height="600" Name="ScrollGuide" CanContentScroll="False">
                            <RichTextBox Name="RTBGuide" Style="{StaticResource GuideRichTextBox}" Margin="0 0 20 0" PreviewMouseDown="RTBGuide_PreviewMouseDown" PreviewKeyDown="RTBGuide_PreviewKeyDown"/>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
