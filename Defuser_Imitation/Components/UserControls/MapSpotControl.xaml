<UserControl x:Class="Defuser_Imitation.Components.UserControls.MapSpotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <UserControl.Resources>
        <Storyboard x:Key="MapSpotAnimation" Completed="Storyboard_Completed">
            <DoubleAnimation
            Storyboard.TargetName="viewbox"
            Storyboard.TargetProperty="Opacity"
            Duration="0:0:0.4"
            To="1"/>

            <DoubleAnimation
            Storyboard.TargetName="spotBorder"
            Storyboard.TargetProperty="Height"
            BeginTime="0:0:0.4"
            Duration="0:0:0.4"
            From="0"
            To="50"/>
            <DoubleAnimation
            Storyboard.TargetName="spotBorder"
            Storyboard.TargetProperty="Width"
            BeginTime="0:0:0.4"
            Duration="0:0:0.4"
            From="0"
            To="50"/>

            <DoubleAnimation
            Storyboard.TargetName="innerBorder"
            Storyboard.TargetProperty="Height"
            BeginTime="0:0:0.8"
            Duration="0:0:0.4"
            From="0"
            To="50"/>
            <DoubleAnimation
            Storyboard.TargetName="innerBorder"
            Storyboard.TargetProperty="Width"
            BeginTime="0:0:0.8"
            Duration="0:0:0.4"
            From="0"
            To="50"/>

            <DoubleAnimation
            Storyboard.TargetName="coreBorder"
            Storyboard.TargetProperty="Height"
            BeginTime="0:0:1.0"
            Duration="0:0:0.8"
            From="0"
            To="50"/>
            <DoubleAnimation
            Storyboard.TargetName="coreBorder"
            Storyboard.TargetProperty="Width"
            BeginTime="0:0:1.0"
            Duration="0:0:0.8"
            From="0"
            To="50"/>

            <DoubleAnimation
            Storyboard.TargetName="viewbox"
            Storyboard.TargetProperty="Opacity"
            BeginTime="0:0:1.8"
            Duration="0:0:0.4"
            To="0"/>
        </Storyboard>
    </UserControl.Resources>
    <Viewbox Height="50" Width="50" Name="viewbox">
        <Border Height="50" Width="50" BorderBrush="#FF2BA1E7" BorderThickness="2" Name="spotBorder">
            <Border.Background>
                <SolidColorBrush Color="#FF2BA1E7" Opacity="0.3"/>
            </Border.Background>
            <Border BorderBrush="#FF2BA1E7" BorderThickness="2" Height="30" Width="30" Name="innerBorder" HorizontalAlignment="Center">
                <Border Background="#FF2BA1E7" Height="10" Width="10" Name="coreBorder" HorizontalAlignment="Center"/>
            </Border>
        </Border>

    </Viewbox>
</UserControl>
