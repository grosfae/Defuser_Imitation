<UserControl x:Class="Defuser_Imitation.Components.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Focusable="True" Loaded="UserControl_Loaded">
    <UserControl.Background>
        <SolidColorBrush Color="#FF121212" Opacity="0.6"/>
    </UserControl.Background>

    <Grid Name="MainGrid">
        <Image Source="/Resources/controls_background.jpg" Width="1920" Height="1010" Stretch="UniformToFill" Margin="0 35"/>
        <Viewbox VerticalAlignment="Top" Width="42" Height="85" Margin="0 100 0 0" HorizontalAlignment="Left" Focusable="False">
            <Button Name="BackBtn" Height="85" Width="42" Style="{StaticResource BackButton}" Focusable="False" Click="BackBtn_Click">
                <Path Data="M14.7778 0H19V3L7.38889 14.5L19 27V30H14.7778L0 14.5L14.7778 0Z" Fill="#121212"/>
            </Button>
        </Viewbox>
        <Viewbox Margin="0 100">
            <Grid Height="800" Width="1250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="690"/>
                    <ColumnDefinition Width="560"/>
                </Grid.ColumnDefinitions>
                <ScrollViewer Focusable="False">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Text="ОБЩЕЕ" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="40"/>
                                <Rectangle Height="5" Fill="WhiteSmoke" Width="660" Margin="0 5" />
                                <Grid Background="Transparent" Name="BlockTypeCode" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave" Margin="0 5">
                                    <TextBlock Text="Тип кода" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SwitchControl x:Name="SwchTypeCode" Height="48" Width="400" HorizontalAlignment="Right" SelectedItemChanged="SwchTypeCode_SelectedItemChanged" SwitchList="{Binding TypeCodeList}" SelectedIndex="{Binding DeviceTypeCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" x:Name="BlockDeviceCode" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Код устройства" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:TextBoxControl HorizontalAlignment="Right" Width="400" Height="48" Text="{Binding DeviceCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" MaxLength="8" PreviewTextInput="CodeBoxControl_PreviewTextInput" PreviewKeyDown="NoneSpaceBar_PreviewKeyDown"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockManualDigit" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Символы ручн. ввода" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Minimum="1" Maximum="8" SliderValue="{Binding ManualInputDigitsCount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockActivationPhase" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Этап активации (сек.)" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Minimum="20" Maximum="240" SliderValue="{Binding ActivationPhaseCountdown, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockDeactivationPhase" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Этап деактивации (сек.)" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Minimum="20" Maximum="120" SliderValue="{Binding DeactivationPhaseCountdown, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockPreparationPhase" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Фаза подготовки (сек.)" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Minimum="0" Maximum="60" SliderValue="{Binding PreparationPhaseCountdown, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="АУДИО" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="40" Margin="0 10 0 0"/>
                                <Rectangle Height="5" Fill="WhiteSmoke" Width="660" Margin="0 5" />
                                <Grid Background="Transparent" Margin="0 5" Name="BlockActivationPhaseVolume" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Громк. этапа активации" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Maximum="100" SliderValue="{Binding ActivationPhaseVolume, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockDeactivationPhaseVolume" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Громк. этапа деактивации" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Maximum="100" SliderValue="{Binding DeactivationPhaseVolume, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockPreparationPhaseVolume" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Громк. фазы подготовки" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Maximum="100" SliderValue="{Binding PreparationPhaseVolume, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockComplitionPhaseVolume" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Громк. исхода раунда" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SliderControl Height="48" Width="400" HorizontalAlignment="Right" Maximum="100" SliderValue="{Binding ComplitionPhaseVolume, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="УСКОРЕННАЯ ДЕАКТИВАЦИЯ" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="40" Margin="0 10 0 0"/>
                                <Rectangle Height="5" Fill="WhiteSmoke" Width="660" Margin="0 5" />
                                <Grid Background="Transparent" Margin="0 5" Name="BlockUSBDevice" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Использовать уск. деакт." FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:SwitchControl x:Name="SwchFastDefuse" Height="48" Width="400" HorizontalAlignment="Right" SelectedItemChanged="SwchFastDefuse_SelectedItemChanged" SwitchList="{Binding FastDefuseList}" SelectedIndex="{Binding UseUSBDevice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                                <Grid Background="Transparent" Margin="0 5" Name="BlockUSBDeviceName" MouseEnter="SettingBlock_MouseEnter" MouseLeave="SettingBlock_MouseLeave">
                                    <TextBlock Text="Наименование носителя" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <local:TextBoxControl Height="48" Width="400" HorizontalAlignment="Right" MaxLength="50" Text="{Binding USBDeviceName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Grid.Column="1" Margin="70 0 0 0" HorizontalAlignment="Left">
                    <TextBlock Name="TbSettingHeader" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock Name="TbSettingDescription" FontFamily="{StaticResource BravoFont}" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Width="490" Margin="0 20 0 0"/>
                </StackPanel>
                <Viewbox Grid.Column="1"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="400" Height="50.2">
                    <StackPanel Orientation="Horizontal">
                        <Button Name="SettingsDefaultBtn" Style="{StaticResource SmallMenuButton}" Height="32" Width="120" Content="ПО УМОЛЧ." FontSize="16" Focusable="False" Click="SettingsDefaultBtn_Click"/>
                        <Button Name="SettingsSaveBtn" Style="{StaticResource SmallMenuButton}" Height="32" Width="120" Content="ПРИМЕНИТЬ" FontSize="16" Focusable="False" Margin="15 0 0 0" Click="SettingsSaveBtn_Click" IsEnabled="False"/>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
