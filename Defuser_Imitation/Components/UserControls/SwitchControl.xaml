<UserControl x:Name="userControl" x:Class="Defuser_Imitation.Components.UserControls.SwitchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" Loaded="userControl_Loaded"
             d:DesignHeight="48" d:DesignWidth="400" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" RenderTransformOrigin="0.5,0.5">
    <UserControl.RenderTransform>
        <ScaleTransform ScaleX="1" ScaleY="1"/>
    </UserControl.RenderTransform>
    <UserControl.Background>
        <SolidColorBrush Color="White" Opacity="0.6"/>
    </UserControl.Background>
    <Grid>
        <Button Name="LeftBtn" Height="48" Width="48" Focusable="False" HorizontalAlignment="Left" Foreground="#FF121212" Style="{StaticResource ArrowsButton}" Click="LeftBtn_Click" MouseEnter="ArrowBtn_MouseEnter" MouseLeave="ArrowBtn_MouseLeave" IsEnabledChanged="ArrowBtn_IsEnabledChanged" Visibility="Collapsed">
            <Path Data="M9 0H14L5 11L14 22H9L0 11L9 0Z" Fill="{Binding Foreground, ElementName=LeftBtn}"/>
        </Button>
        <Button Name="RightBtn" Height="48" Width="48" Focusable="False" HorizontalAlignment="Right" Foreground="#FF121212" Style="{StaticResource ArrowsButton}" Click="RightBtn_Click" MouseEnter="ArrowBtn_MouseEnter" MouseLeave="ArrowBtn_MouseLeave" IsEnabledChanged="ArrowBtn_IsEnabledChanged" Visibility="Collapsed">
            <Path Data="M0 0H5L14 11L5 22H0L9 11L0 0Z" Fill="{Binding Foreground, ElementName=RightBtn}"/>
        </Button>
        <TextBlock Name="TbOptionName" FontFamily="{StaticResource BravoFont}" Text="{Binding SelectedItem, ElementName=userControl}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="26" Margin="0 2 0 0"/>
        <StackPanel Name="StOptionRadioButtons" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Rectangle Name="RectElement" Opacity="0" Fill="{StaticResource ElementThemeColor}" Height="6" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
