<UserControl x:Name="userControl" x:Class="Defuser_Imitation.Components.UserControls.DefuseDeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             xmlns:components="clr-namespace:Defuser_Imitation.Components"
             mc:Ignorable="d" 
             d:DesignHeight="1440" d:DesignWidth="2560" Loaded="DefuseDeviceControl_Loaded">
    <UserControl.Resources>
        <SolidColorBrush x:Key="LocalColor" Color="#3C9895"/>
    </UserControl.Resources>
    <UserControl.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="/Resources/sIgnal_grid_background.jpg"/>
    </UserControl.Background>
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Viewbox VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Center">
                <Grid Height="550" Width="1920">
                    <Viewbox VerticalAlignment="Bottom" Margin="0 0 0 160">
                        <Grid>
                            <Path Stroke="White" Opacity="0.3" StrokeThickness="1" Name="OriginalSignalPath" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure x:Name="OriginalSignalFigure"/>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Path Stroke="{StaticResource LocalColor}" StrokeThickness="1" Name="DeviceSignalPath" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure x:Name="DeviceSignalFigure"/>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>
                    </Viewbox>
                </Grid>
            </Viewbox>
            <Viewbox Grid.Row="1" Margin="16 20 16 0">
                <StackPanel>
                    <Rectangle Fill="#3C9895" Height="4" />
                    <Grid Name="IndicatorGrid" Height="90" Width="1880" Margin="0 4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Rectangle Fill="#3C9895" Height="4" Width="1872"/>
                </StackPanel>
            </Viewbox>
            <Viewbox Grid.Row="2" VerticalAlignment="Center" Margin="20 0 20 0">
                <Grid >
                    <StackPanel Orientation="Horizontal" Width="400">
                        <TextBlock FontFamily="{StaticResource BravoFont}" Text="&gt;" Foreground="#3C9895" FontSize="30" VerticalAlignment="Center" FontWeight="Bold"/>
                        <StackPanel Name="StDeviceCode" Orientation="Horizontal" VerticalAlignment="Center" Margin="10 0 0 0">
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBlock FontFamily="{StaticResource DigitFont}" Text="−" FontSize="30" Foreground="{StaticResource LocalColor}"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBlock FontFamily="{StaticResource DigitFont}" Text="−" FontSize="30" Foreground="{StaticResource LocalColor}"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                            <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" ContextMenu="{x:Null}" ContextMenuService.IsEnabled="False" ContextMenuService.ShowOnDisabled="False"/>
                        </StackPanel>
                        <TextBlock Name="TbCountdown" FontFamily="{StaticResource DigitFont}" Foreground="White" Text="000" FontSize="26" VerticalAlignment="Center" Margin="55 5 0 0" Opacity="0.3" Width="60" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Viewbox>
        </Grid>
    </Viewbox>
</UserControl>
