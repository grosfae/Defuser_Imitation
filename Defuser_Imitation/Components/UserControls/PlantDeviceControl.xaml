<UserControl x:Class="Defuser_Imitation.Components.UserControls.PlantDeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" Background="#FF121212" Loaded="PlantDeviceControl_Loaded">
    <UserControl.Resources>
        <SolidColorBrush x:Key="LocalColor" Color="#3C9895"/>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Viewbox VerticalAlignment="Top" Margin="0 5 0 0" Grid.Row="0" >
                <StackPanel Orientation="Horizontal">
                    <ProgressBar Name="SignalPb" Height="9" Width="300" Value="100" Maximum="100" BorderThickness="0" Background="#FF121212" Foreground="White" >
                        <ProgressBar.OpacityMask>
                            <ImageBrush ImageSource="/Resources/signal_mask.png" Stretch="UniformToFill"/>
                        </ProgressBar.OpacityMask>
                    </ProgressBar>
                </StackPanel>
            </Viewbox>
            <Viewbox Grid.Row="1" Margin="0 20">
                <Grid Name="MatrixGrid" d:Height="23" d:Width="80">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Viewbox>
            <Viewbox Grid.Row="2" VerticalAlignment="Bottom">
                <StackPanel Width="300">
                    <Rectangle Fill="{StaticResource LocalColor}" Height="1" Margin="0 0 0 2"/>
                    <StackPanel Name="StDeviceCode" Orientation="Horizontal">
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBlock FontFamily="{StaticResource DigitFont}" Text="−" FontSize="30" Foreground="{StaticResource LocalColor}"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBlock FontFamily="{StaticResource DigitFont}" Text="−" FontSize="30" Foreground="{StaticResource LocalColor}"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                        <TextBox Style="{StaticResource CodeBox}" FontSize="30" Width="26" Foreground="{StaticResource LocalColor}" GotFocus="DigitBlock_GotFocus"/>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
