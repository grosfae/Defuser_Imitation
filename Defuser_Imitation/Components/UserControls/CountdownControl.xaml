<UserControl x:Class="Defuser_Imitation.Components.UserControls.CountdownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF121212" Opacity="0.6"/>
        </Grid.Background>
        <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="TbCountdown" Foreground="White" FontFamily="{StaticResource BravoFont}" FontSize="40" Text="10"/>
        </Viewbox>
    </Grid>
</UserControl>
