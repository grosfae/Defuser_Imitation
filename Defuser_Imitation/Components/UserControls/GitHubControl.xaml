<UserControl x:Name="userControl" x:Class="Defuser_Imitation.Components.UserControls.GitHubControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="120" Height="32" Width="120">

    <Border Background="#FF121212">
        <Grid>
            <Grid Height="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=6}" Width="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=6}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-10">
                <Ellipse Stroke="White" StrokeThickness="1" Height="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=6}" Width="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=6}"/>
                <Ellipse Fill="White" Stroke="White" StrokeThickness="1" Height="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=24}" Width="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=24}" HorizontalAlignment="Right" Margin="0 0 -3.4 0"/>
            </Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden">
                <Image Source="/Resources/GitHub/github-mark-white.png" Height="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=16}" VerticalAlignment="Center"/>
                <Image Source="/Resources/GitHub/GitHub_Logo_White.png" Height="{Binding Height, ElementName=userControl, Converter={StaticResource StyleMinusConverter}, ConverterParameter=10}" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
