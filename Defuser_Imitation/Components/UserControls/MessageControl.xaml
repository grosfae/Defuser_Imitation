<UserControl x:Class="Defuser_Imitation.Components.UserControls.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d"
            d:DesignHeight="350" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Color="#FF121212" Opacity="0.6"/>
    </UserControl.Background>
    <Viewbox Name="ControlVb" Width="800">
        <Border BorderBrush="#FF2BA1E7" BorderThickness="1">
            <Grid x:Name="grid" Background="#FF1E1E1E" MinHeight="350" MinWidth="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#FF1E1E1E" Height="40" Name="Header">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock Name="TbTitle" Text="Title" Foreground="White" FontFamily="{StaticResource RobotoFont}" FontWeight="Regular" FontSize="16" VerticalAlignment="Center" Margin="5 0 0 0"/>
                    </StackPanel>
                    <Button Name="CloseBtn" Style="{StaticResource CloseWindowButton}" Height="40" Width="40" Click="CloseBtn_Click" Cursor="Hand" HorizontalAlignment="Right"/>

                    <Line X1="0" X2="800" Stroke="#FF2BA1E7" StrokeThickness="1" Stretch="Fill" VerticalAlignment="Bottom"/>
                </Grid>

                <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0 0 0 30">
                    <TextBlock Name="TbMessage" FontFamily="{StaticResource RobotoFont}" Text="Message" FontWeight="Regular" FontSize="46" Foreground="White" HorizontalAlignment="Stretch" TextWrapping="Wrap" Padding="40 20" TextAlignment="Center"/>
                    <TextBlock Name="TbMessageDescription" FontFamily="{StaticResource RobotoFont}" Text="Message description" FontWeight="Thin" FontSize="26" Foreground="White" HorizontalAlignment="Stretch" TextWrapping="Wrap" Padding="40 0" TextAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 0 0 30">
                    <Button Name="ConfirmBtn" Background="Transparent" Content="Хорошо" Style="{StaticResource TransparentButton}" Width="170" Height="50" FontSize="25" Click="ConfirmBtn_Click"/>
                    <Button Name="CancelBtn" Background="Transparent" Content="Отмена" Style="{StaticResource TransparentButton}" Width="170" Height="50" FontSize="25" Margin="20 0 0 0" Click="CancelBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
