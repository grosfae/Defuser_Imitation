<UserControl x:Name="userControl" x:Class="Defuser_Imitation.Components.UserControls.TextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Defuser_Imitation.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="400" MouseLeftButtonDown="userControl_MouseLeftButtonDown">
    <Grid>
        <TextBox Name="TbOption" Style="{StaticResource SettingTextBox}" HorizontalContentAlignment="Center"  Width="400" Height="48" FontSize="26" Text="{Binding Text, ElementName=userControl, UpdateSourceTrigger=PropertyChanged}" MaxLength="{Binding MaxLength, ElementName=userControl}" KeyDown="TbOption_KeyDown"/>
    </Grid>
</UserControl>
