<Page x:Class="Defuser_Imitation.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Defuser_Imitation.Pages"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MenuPage">
    <Page.Background>
        <ImageBrush ImageSource="/Resources/menu_background.jpg" Stretch="UniformToFill"/>
    </Page.Background>
    <Grid Name="PageGrid">
        <TextBlock Name="TbVersion" FontFamily="{StaticResource RobotoFont}" FontSize="24" Padding="10 5" Panel.ZIndex="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBlock.Foreground>
                <SolidColorBrush Color="White" Opacity="0.2"/>
            </TextBlock.Foreground>
        </TextBlock>
        <Canvas Name="MapCanvas"/>
        <Viewbox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="780"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Panel.ZIndex="2" Margin="180 0 0 0">
                    <StackPanel Cursor="">
                        <StackPanel Orientation="Horizontal">
                            <Button Name="PlayBtn" Height="42" Width="120" Style="{StaticResource BigMenuButton}" Content="Начать" FontSize="16" Focusable="False" Click="PlayBtn_Click"/>
                            <Button Name="SettingsBtn" Height="42" Width="120" Style="{StaticResource BigMenuButton}" Content="Настройки" FontSize="16" Focusable="False" Margin="5 0 0 0" Click="SettingsBtn_Click"/>
                        </StackPanel>
                        <Button Name="UpdateBtn" Height="136" Width="245" Style="{StaticResource UpdateMenuButton}" Focusable="False" Margin="0 5 0 5" Panel.ZIndex="1" Click="UpdateBtn_Click">
                            <Grid>
                                <Image Source="/Resources/update_button_background.png" Stretch="UniformToFill" >
                                    <Image.OpacityMask>
                                        <LinearGradientBrush EndPoint="0.3,0.4" StartPoint="0.1,0">
                                            <GradientStop Color="Transparent"/>
                                            <GradientStop Color="White" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Image.OpacityMask>
                                </Image>
                                <StackPanel VerticalAlignment="Bottom" Margin="6 13 0 0">
                                    <TextBlock Name="TbUpdateText" FontSize="15" Foreground="WhiteSmoke" VerticalAlignment="Top" HorizontalAlignment="Left" />
                                    <TextBlock Name="TbUpdateVersion" FontSize="25" Foreground="WhiteSmoke" FontWeight="Bold"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0 0 0 0"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                        <StackPanel Orientation="Horizontal">
                            <Button Name="GuideBtn" Height="32" Width="120" Style="{StaticResource SmallMenuButton}" FontSize="16" Content="Руководство" Focusable="False" Click="GuideBtn_Click"/>
                            <Button Name="GitHubBtn" Height="32" Width="120" Style="{StaticResource GitHubMenuButton}" Focusable="False" Margin="5 0 0 0" Click="GitHubBtn_Click"/>
                        </StackPanel>
                        <Button Name="ExitBtn" Height="32" Width="245" Style="{StaticResource SmallMenuButton}" Content="Выход" FontSize="16" Focusable="False" Margin="0 5 0 0" Click="ExitBtn_Click"/>
                    </StackPanel>
                </Viewbox>

                <Viewbox Grid.Column="1" Height="630" Width="1140" VerticalAlignment="Center">
                    <Grid Height="420" Width="420">
                        <Ellipse Width="360" Height="360" Panel.ZIndex="0" StrokeThickness="10">
                            <Ellipse.Stroke>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0.5,0">
                                    <GradientStop Color="WhiteSmoke"/>
                                    <GradientStop Color="#FF235877" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                            <Ellipse.Fill>
                                <SolidColorBrush Color="#FF121212" Opacity="0.5"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="2">
                            <TextBlock Name="TbTime" Text="00:00" Foreground="White" FontSize="100" FontFamily="{StaticResource BravoFont}" Width="300" TextAlignment="Center"/>
                            <TextBlock Name="TbDate" Text="Дата" Foreground="White" FontSize="30" FontFamily="{StaticResource BravoFont}" Width="300" TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
